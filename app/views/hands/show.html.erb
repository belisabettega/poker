<div class="container">
  <div class="row">
    <div class="col">
      <h1>Poker hands app</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= simple_form_for [@hand, @card] do |f| %>
        <%= f.input :face %>
        <%= f.input :suit %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= @hand.name if @hand.complete%>
    </div>
  </div>
</div>